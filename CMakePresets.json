{
  "version": 6,

  "configurePresets": [
    {
      "name": "ucrt64-debug",
      "displayName": "UCRT64 (Debug)",
      "description": "Debug build with MSYS2 UCRT64 toolchain and Ninja",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_COMPILER": "C:/msys64/ucrt64/bin/g++.exe",
        "CMAKE_MAKE_PROGRAM": "C:/msys64/ucrt64/bin/ninja.exe",
        "CMAKE_TOOLCHAIN_FILE": "C:/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "ucrt64-release",
      "displayName": "UCRT64 (Release)",
      "description": "Optimized build with MSYS2 UCRT64 toolchain and Ninja",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_COMPILER": "C:/msys64/ucrt64/bin/g++.exe",
        "CMAKE_MAKE_PROGRAM": "C:/msys64/ucrt64/bin/ninja.exe",
        "CMAKE_TOOLCHAIN_FILE": "C:/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "ucrt64-debug-build",
      "displayName": "UCRT64 Debug Build",
      "configurePreset": "ucrt64-debug",
      "verbose": true,
      "jobs": 8,
      "targets": [ "all" ]
    },
    {
      "name": "ucrt64-release-build",
      "displayName": "UCRT64 Release Build",
      "configurePreset": "ucrt64-release",
      "verbose": true,
      "jobs": 8,
      "targets": [ "all" ]
    }
  ]
}
